<?php
/**
 * Template Name: Blogs Archive Template
 *
 * This is the template that displays Full-width pages.
 * Please note that this is the WordPress construct of pages
 * and that other 'pages' on your WordPress site will use a
 * different template.
 *
 * @package PWD Default Theme
 * @since PWD Default Theme 1.0
 */

get_header(); ?>

<div class="warp">
		<div id="primary" class="content-area">
			<div id="content" class="site-content" role="main">	  
              
               <article id="post-<?php the_ID(); ?>" <?php post_class(); ?>>
				
                <header class="entry-header">
		
				</header><!-- .entry-header -->


			    <div class="entry-content">
            		 <div class="title-blog">
                        <div class="left"><? the_title();?></div>
                        
                     
                         <?php /*?><div class="date">
                            <div class="txtdate"><? the_date('j.n.y');?></div>
                           <div class="numcomment">
						   		
                                <?php echo $count_pages = wp_count_posts('blog'); ?>
                           </div>
                        </div><?php */?>
                     
                     </div>
            		
                    
            	<!--/ Start Blog Container /-->


					<?php
                        $args = array(
                            'post_type'		 	=> 'blog',
                            'orderby' 			=> 'date',
                            'order'				=> 'DESC',
                            'posts_per_page' 	=> 2
                        );
                        $the_query = new WP_Query( $args );
                        
                        if($the_query->post_count>0){
                        
                         $i		= 0;
                         $col 	= 3;
                    
                          while ($the_query->have_posts()) : $the_query->the_post(); ?>
                         
                         <?php /*?><div class="left">
                         <div class="right"></div>
                         
                         <?php /*?><div class="date">
                         <div class="txtdate"><? the_date('j.n.y');?></div>
                         
                         </div>
                         
                         </div><?php */?>
          				
                        <div class="blog_area">
          	 
                          <div class="blog_img">
                           
                           <?php
                            if ( has_post_thumbnail() ) {
                                the_post_thumbnail('blog');
                            }
                            else {
                                echo '<img src="' . get_bloginfo( 'stylesheet_directory' ) . '/images/thumbnail-default.png" />';
                            }
                            ?>
                           
                            
                            </div>

                            <div class="blog_content"> 
                            <h3 class="cta-title"><? the_title();?></h3>
                            <? the_excerpt();?>
                            <a href="<?php the_permalink(); ?>" title="<? the_title();?>" ><div class="readmore">Read more</div></a>
                            </div>
                
         			    </div>
                     
							<?php		
                          endwhile;
                
                        }

							/* Restore original Post Data 
							 * NB: Because we are using new WP_Query we aren't stomping on the 
							 * original $wp_query and it does not need to be reset.
							*/
							wp_reset_postdata();
						  ?><!--/ END Blog Container /--> 

				
        
			</div><!-- .entry-content -->
            
		</article><!-- #post-<?php the_ID(); ?> -->
	</div><!-- #content .site-content -->
  </div><!-- #primary .content-area -->
</div>

<?php get_footer('new'); ?>