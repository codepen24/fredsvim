<?php
/**
 * Template Name: Tour Page Template
 *
 * This is the template that displays Full-width pages.
 * Please note that this is the WordPress construct of pages
 * and that other 'pages' on your WordPress site will use a
 * different template.
 *
 * @package PWD Default Theme
 * @since PWD Default Theme 1.0
 */

get_header('new'); ?>

<div class="warp">
		<div id="primary" class="content-area">
			<div id="content" class="site-content" role="main">	  
              
               <article id="post-<?php the_ID(); ?>" <?php post_class(); ?>>
				<header class="entry-header">
		
				</header><!-- .entry-header -->


			    <div class="entry-content">
            
            	<div class="content2-multi" >
        
        	
            
                    <div class="img-left">
                        <?php echo get_the_post_thumbnail(); ?>
                        
                	</div>
            	
            		<div class="img-right">
						<?php if(class_exists('kdMultipleFeaturedImages')) {
                                for ($i = 2; $i <= 4; $i++) {
                                    
                                echo "<div class='sub-img' id='img-".$i."'>";
                                    
                                kd_mfi_the_featured_image("featured-image-".$i, "page");
                                
                                echo "</div>";
                                
                                }
                            } 
                        ?>
                    </div>
            
          
      				</div>

          
				<?php the_content(); ?>
                <?php wp_link_pages( array( 'before' => '<div class="page-links">' . __( 'Pages:', 'pwd' ), 'after' => '</div>' ) ); ?>
                <?php edit_post_link( __( 'Edit', 'pwd' ), '<span class="edit-link">', '</span>' ); ?>
        
			</div><!-- .entry-content -->
            
		</article><!-- #post-<?php the_ID(); ?> -->
	</div><!-- #content .site-content -->
  </div><!-- #primary .content-area -->
</div>

<?php get_footer(); ?>
