<?php
/**
 * Template Name: List page Template
 *
 * This is the template that displays Full-width pages.
 * Please note that this is the WordPress construct of pages
 * and that other 'pages' on your WordPress site will use a
 * different template.
 *
 * @package PWD Default Theme
 * @since PWD Default Theme 1.0
 */

get_header('new'); ?>

<div class="warp">
	<div id="primary" class="content-area">
		<div id="content" class="site-content" role="main">	  
			<h1><?php the_title(); ?></h1>
			<article id="post-<?php the_ID(); ?>" <?php post_class(); ?>>
				<header class="entry-header">
					
				</header><!-- .entry-header -->


				<div class="entry-content">
					<div id="showcat">
						<?php
						$current = $post->ID;
						$args = array(
							'post_parent'		 	=>  $current,
							'post_type' 			=> 'page',
							'orderby' 			=> 'menu_order',
							'order'				=> 'ASC',
							'posts_per_page' 	=> -1
						);
						$the_query = new WP_Query( $args );
						if($the_query->post_count>0){
							
							while ( $the_query->have_posts() ) : $the_query->the_post();
								?>
								<div class="block">
									<div class="thumb">
										<a href="<?php the_permalink(); ?>" title="<?php the_title_attribute( 'echo=0' ); ?>" rel="bookmark">
											<?php
											if ( has_post_thumbnail() ) {
												the_post_thumbnail();
											}else {
												echo '<img src="' . get_bloginfo( 'stylesheet_directory' ) . '/images/thumbnail-default.png" />';
											}

											?>
										</a>
									</div>
									<div class="block_content">
										<div class="styleh3"><a href="<?php the_permalink(); ?>" title="<?php the_title_attribute( 'echo=0' ); ?>" rel="bookmark"><?php the_title();?></a></div>
										<?php //the_excerpt(); ?>
									</div>
								</div>
							<?php endwhile;

						}
						wp_reset_postdata();
						?>
					</div>
					
				</div><!-- .entry-content -->
				
			</article><!-- #post-<?php the_ID(); ?> -->
		</div><!-- #content .site-content -->
	</div><!-- #primary .content-area -->
</div>

<?php get_footer('new'); ?>
